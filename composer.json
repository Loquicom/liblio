{
    "name": "loquicom/liblio",
    "description": "Simple library management system (SIGB in french)",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/Loquicom/liblio",
    "support": {
        "source": "https://github.com/Loquicom/liblio"
    },
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.0",
        "codeigniter4/shield": "^1.1",
        "codeigniter4/translations": "^4.5",
        "firebase/php-jwt": "^6.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16",
        "picocss/pico": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
